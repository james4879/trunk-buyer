<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/pohoto_bg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:background="@drawable/bottom_bg_mach" >

            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/zan"
                android:drawablePadding="5dp"
                android:text="0"
                android:textColor="#8e8e8e"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/zan"
                android:drawableLeft="@drawable/cai"
                android:drawablePadding="5dp"
                android:text="0"
                android:textColor="#8e8e8e"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_bg" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/lytwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/pohoto_bg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:background="@drawable/bottom_bg_mach" >

            <TextView
                android:id="@+id/zan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/zan"
                android:drawablePadding="5dp"
                android:text="0"
                android:textColor="#8e8e8e"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/zan1"
                android:drawableLeft="@drawable/cai"
                android:drawablePadding="5dp"
                android:text="0"
                android:textColor="#8e8e8e"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/share1"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_bg" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>