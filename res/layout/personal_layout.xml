<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_bg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料编辑"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/post"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/post_item_bg" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/head"
                android:layout_width="98dp"
                android:layout_height="97dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/head_img_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="昵称："
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nikename"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:maxLength="10"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="选择你的style："
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:background="@drawable/img1_selection" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img2_selection" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img3_selection" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:background="@drawable/img4_selection" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img5_selection" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img6_selection" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:background="@drawable/img7_selection" />

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img8_selection" />

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/img9_selection" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>