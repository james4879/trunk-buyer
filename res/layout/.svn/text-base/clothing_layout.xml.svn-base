<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_bg">
        <TextView android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="取消"/>
        <Button android:id="@+id/save"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:background="@drawable/clothing_save_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/ll_section"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/title_bar">
        <TextView android:id="@+id/season"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:text="季节"
            android:textSize="15sp"
            android:textColor="#696969"
            android:gravity="center"/>
        <ImageView android:id="@+id/iv1"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:src="@drawable/add_vertical"
            android:layout_gravity="center_vertical"/>
        <TextView android:id="@+id/style"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#696969"
            android:text="风格"
            android:gravity="center"/>
        <ImageView android:id="@+id/iv1"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:src="@drawable/add_vertical"
            android:layout_gravity="center_vertical"/>
        <TextView android:id="@+id/brand"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#696969"
            android:text="品牌"
            android:gravity="center"/>
        <ImageView android:id="@+id/iv1"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:src="@drawable/add_vertical"
            android:layout_gravity="center_vertical"/>
        <TextView android:id="@+id/price"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#696969"
            android:text="价格"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/rl_dy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_section"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_season"
            android:layout_width="72dp"
            android:layout_height="29dp"
            style="@style/spinner_style"
            android:text="春天"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"/>
        <Button android:id="@+id/btn_style"
            android:layout_width="72dp"
            android:layout_height="29dp"
            style="@style/spinner_style"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="欧美"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"/>
        <Button android:id="@+id/btn_brand"
            android:layout_width="72dp"
            android:layout_height="29dp"
            style="@style/spinner_style"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="ONLY"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"/>
        <Button android:id="@+id/btn_price"
            android:layout_width="72dp"
            android:layout_height="29dp"
            style="@style/spinner_style"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="0-100"
            android:textSize="15sp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_dy"
        >
        <ImageView android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:background="#ededed"
            android:src="@drawable/a1"
            />
        <EditText android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/iv_goods"
            android:textSize="18sp"
            android:background="@null"
            android:textColor="#7a7a7a"
            android:hint="想说点什么..."/>
        <ListView android:id="@+id/lv_data"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/btn_season"
            android:scrollbars="none"
            android:divider="@null"
            android:visibility="visible">
        </ListView>
       
    </RelativeLayout>
    
</RelativeLayout>